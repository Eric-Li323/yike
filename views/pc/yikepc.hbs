{{#section 'head'}}
    <title>yike</title>
    <link rel="stylesheet" type="text/css" href="/css/pc/yike.css">
    <link rel="stylesheet" type="text/css" href="/lib/scroll/scroll.css">
    <script src="/socket.io/socket.io.js"></script>
{{/section}}
<div class="main">
	<div class="main-left">
		<div class="left-header">
			<input type="hidden" class="userid" value="{{id}}">
			<ul>
				<li data-link="/detail?id={{id}}"><p class="img"><img src="/vacation-photo/{{myimgurl}}"/>
				</p></li>
				<li data-link="/create-group"><p href="/create-group" class="cregroup"></p></li>
				<li data-link="/yike/search"  class="search"><i></i><p class="search-inner">搜索好友、群</p><li>
			</ul>
		</div>
		<div class="left-user">
			<div class="add">
				<i class="icon"></i>
				<span>好友申请</span>
				<i class="item">0</i>
			</div>
			<ul class="adduser"></ul>
			<ul class="userlist">
				<div class="no-friend"><img src="/images/nothing.png"></div>
			</ul>
		</div>
	</div>
	<div class="main-right">
		<iframe src="/yikepc/firstview" frameborder="0" scrolling="yes" class="right-iframe" ></iframe>
	</div>
</div>
{{#section 'jquery'}}
	<script src="/js/myfunc.js" type="text/javascript"></script>
	<script type="text/javascript" src="/lib/scroll/scroll.min.js"></script>
	<script src="/js/pc/yike.js" type="text/javascript"></script>
{{/section}}
