{{#section 'head'}}
    <title>详情</title>
    <link rel="stylesheet" type="text/css" href="css/detail.css">
{{/section}}
<h3>详情</h3>
<a href="javascript:history.back(-1)">返回</a>

{{#each vacation}}
<p><img src="/vacation-photo/{{mgurl}}" style="width:100px;" /></p>
{{#if markname}}
	<p class="name-mark">备注名：{{markname}}</p>
	<p>昵称：{{name}}</p>
{{else}}
	<p>昵称：{{name}}</p>
{{/if}}
<p>说明：{{explain}}</p>
<p>注册：{{registerdate}}</p>
<p>邮箱:{{email}}</p>
<p>性别:{{sex}}</p>
<p>生日:{{birth}}</p>
<p>在线:{{online}}</p>
{{#if admin}}
	<a href="/install">修改</a>
	<a href="/logout" class="quit">退出</a>
{{else}}
{{#if frid}}
	<div class="addmark">
		<input type="text" class="markname" value="{{markname}}">
		<button class="upmark" data-id="{{id}}">确定</button>
	</div>
	<button class="beizhu">设置备注</button>
	<a href="/chart?id={{id}}">聊天</a>
	<div><a href="/delete-friend?id={{id}}" class="delete">删除好友</a></div>
{{else}}
	<button class="apply">添加好友</button>
	<div class="apply-main">
		<textarea class="reason" placeholder="说点什么吧..."></textarea>
		<button class="add" data-id="{{id}}">添加</button>
	</div>
{{/if}}
{{/if}}
{{/each}}
{{#section 'jquery'}}
	<script src="/js/user-detail.js" type="text/javascript"></script>
{{/section}}
