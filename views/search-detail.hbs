{{#each vacation}}
<p><img src="/vacation-photo/{{mgurl}}" style="width:100px;" /></p>
{{!-- <p>id:{{id}}</p> --}}
<p>姓名：{{name}}</p>
<p>说明：{{explain}}</p>
