<input type="hidden" value="{{count}}" class="count"/>
<input type="hidden" value="{{id}}" class="id"/>
<p class="button"></p>
{{/each}}
{{#section 'jquery'}}
	<script>
		var count = $('.count').val();
		var id = $('.id').val();
		if(count==0){
			var html="<a href='/add?id="+id+"'>加为好友</a>";
			$('.button').html(html);
		}else{
			var html="<a href='/chart?id="+id+"'>聊天</a>";
			$('.button').html(html);		
		}
	</script>
	<script src="/js/showuser.js" type="text/javascript"></script>
{{/section}}