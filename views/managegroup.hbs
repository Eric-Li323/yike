{{#section 'head'}}
    <title>群管理</title>
    <link rel="stylesheet" type="text/css" href="/css/managegroup.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
{{/section}}
<div class="main">
	<div class="bg"></div>
	<div class="head">
		<a href="/groupchart?id={{id}}" class="back">取消</a>
		<div class="title">
			<p class="inform selected">群信息</p>
			<p class="users">群成员</p>
		</div>
	</div>
<input type="hidden" value="{{id}}" class="id">
<input type="hidden" value="{{userid}}" class="userid">

<div class="group-inf">
	<div class="inf-form"></div>
	<div class="dissolve"><button class="more-list">解散并清除群</button></div>
</div>
<div class="group-user">
	<div class="user-form">
		<ul></ul>
	</div>
</div>
</div>

{{#section 'jquery'}}
	<script src="/lib/mobile/flexible.js" type="text/javascript"></script>
	<script src="/js/managegroup.js" type="text/javascript"></script>
{{/section}}
